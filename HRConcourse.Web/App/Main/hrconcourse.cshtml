@using System.Threading
@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/favicon.ico">

    <title>HRConcourse</title>


    @Styles.Render("~/Bundles/App/vendor/css")
    @Styles.Render("~/Bundles/App/vendor/less")

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
        abp.appFullPath = '@Url.Content("~")';
    </script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="@Url.Content("~/Scripts/others/html5shiv.js")"></script>
        <script src="@Url.Content("~/Scripts/others/respond.min.js")"></script>
    <![endif]-->
    @Scripts.Render("~/Bundles/vendor/js/top")

</head>
<body>
<div id="applicationHost">
    <h2>Loading</h2>
</div>

    @Scripts.Render("~/Bundles/vendor/js/bottom")
    @Scripts.Render("~/Bundles/app/js/bottom")
    <script src="~/api/AbpServiceProxies/GetAll"></script>
    <script>
        //Localizing momentjs
        moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
    </script>

    <!-- Dynamic script for client side localization (It's created on runtime) -->
    <script src="~/AbpScripts/GetScripts" type="text/javascript"></script>

    <script src="~/Abp/Framework/scripts/libs/abp.sweet-alert.js"></script>

    <!-- Entrance script of durandal application -->
    <script src="~/Scripts/require.js" data-main="/App/Main/main"></script>
</body>
</html>